---
interface Props {
  title: string;
  description: string;
  category: string;
  image: string;
  slug: string;
}

const { title, description, category, image, slug } = Astro.props;
---

<a href=`/posts/${slug}`>
  <div class="bg-white rounded-xl p-2 text-[16px] flex flex-col gap-2 border">
    <section class="rounded-xl relative aspect-square">
      <img
        src={image}
        width={100}
        height={100}
        alt={description}
        class="w-full"
      />
      <div class="absolute bg-red-400 right-2 top-2 h-4 px-1 rounded-md">
        <p class="-mt-2.5">{category}</p>
      </div>
    </section>
    <section class="flex flex-col">
      <h1 class="text-sm font-extrabold">{title}</h1>
      <p>{description}</p>
    </section>
  </div>
</a>
